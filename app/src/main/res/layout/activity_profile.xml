<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <EditText
        android:id="@+id/profile_username"
        style="@style/edit_15"
        android:layout_marginTop="@dimen/_30sdp"
        android:drawableLeft="@drawable/user"
        android:hint="Name" />

    <EditText
        android:id="@+id/profile_email"
        style="@style/edit_15"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableLeft="@drawable/email"
        android:hint="Email Id"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/profile_contact"
        style="@style/edit_15"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableLeft="@drawable/call"
        android:hint="Contact No."
        android:inputType="phone"
        android:maxLength="10" />

    <EditText
        android:id="@+id/profile_password"
        style="@style/edit_15"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableLeft="@drawable/lock"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/profile_confirm_password"
        style="@style/edit_15"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableLeft="@drawable/lock"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:visibility="gone" />

    <RadioGroup
        android:id="@+id/profile_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/profile_male"
            style="@style/radio_15"
            android:layout_weight="1"
            android:text="Male" />

        <RadioButton
            android:id="@+id/profile_female"
            style="@style/radio_15"
            android:layout_weight="1"
            android:text="Female" />

    </RadioGroup>

    <Spinner
        android:id="@+id/profile_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:popupBackground="@color/light_purple" />

    <Button
        android:id="@+id/profile_edit"
        style="@style/button_15"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Edit Profile" />

    <Button
        android:id="@+id/profile_submit"
        style="@style/button_15"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Submit"
        android:visibility="gone" />

</LinearLayout>