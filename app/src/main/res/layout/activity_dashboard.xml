<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <TextView
        android:id="@+id/dashboard_welcome"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:text="Welcome"
        style="@style/text_30"/>

    <Button
        android:id="@+id/dashboard_profile"
        android:text="Profile"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/dashboard_welcome"
        style="@style/button_15"/>

    <Button
        android:id="@+id/dashboard_logout"
        android:text="Logout"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/dashboard_profile"
        style="@style/button_15"/>

    <Button
        android:id="@+id/dashboard_delete"
        android:text="Delete Account"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/dashboard_logout"
        style="@style/button_15"/>

</RelativeLayout>